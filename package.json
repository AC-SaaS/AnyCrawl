{
  "name": "anycrawl",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "scrape:dev": "cd packages/scrape && pnpm start:dev",
    "scrape:test": "cd packages/scrape && pnpm test",
    "scrape:playwright:install": "cd packages/scrape && pnpm playwright install --with-deps",
    "api:dev": "cd apps/api && pnpm dev",
    "api:start": "cd apps/api && pnpm start",
    "api:build": "cd apps/api && pnpm build"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18"
  }
}
