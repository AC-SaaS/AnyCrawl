{
    "name": "@repo/scrape",
    "version": "0.0.1-beta.1",
    "type": "module",
    "scripts": {
        "drizzle": "dotenv-run -r ../.. ",
        "watch": "tsc --watch",
        "build": "tsc",
        "dev": "nodemon --watch src -e ts,json --exec 'pnpm run drizzle -- tsx ./src/Worker.ts'",
        "start": "pnpm run drizzle -- tsc && node dist/Worker.js",
        "test": "tsx src/Test.ts"
    },
    "exports": {
        "./*": {
            "import": "./src/*.ts",
            "default": "./dist/*.js"
        },
        "./**/*": {
            "import": "./src/**/*.ts",
            "default": "./dist/**/*.js"
        }
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@turbo/gen": "^2.4.4",
        "@types/node": "^22.13.10",
        "@types/react": "19.0.10",
        "@types/react-dom": "19.0.4",
        "eslint": "^9.22.0",
        "nodemon": "^3.0.3",
        "typescript": "5.8.2"
    },
    "dependencies": {
        "@dotenv-run/cli": "^1.3.6",
        "@repo/libs": "workspace:*",
        "bull": "^4.16.5",
        "bullmq": "^5.45.1",
        "crawlee": "^3.13.0",
        "ioredis": "^5.6.0",
        "playwright": "^1.51.1",
        "puppeteer": "^24.4.0",
        "tsx": "^4.19.3"
    }
}
